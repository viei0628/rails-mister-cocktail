<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Create New Cocktail</h1>
        <%= simple_form_for(@cocktail) do |f| %>
          <%= f.input :name %>
          <%= f.button :submit, class: 'btn btn-primary' %>
