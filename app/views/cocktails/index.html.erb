<div class="banner text-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1468072114808-903e572b8ead?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60);">
  <h1>Tim's Cocktails</h1>
</div>


<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="card col-3 flash">
        <img src="..." class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title text-center"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "Add Cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
